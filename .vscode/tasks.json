{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "cmake",
            "command": "build",
            // "dependsOn":"Clean CMake File",
        },
        {
            "label":"Clean Build File",
            "type":"shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--target",
                "clean"
            ],
            "group": "build",
            "presentation":{
                "reveal":"always",
                "panel":"new"
            },
            "problemMatcher":[]
        },
        {
            "label": "Configure All Projects",//Must Be Done after "Remove CMake Cache"
            "type": "cmake",
            "command": "configure",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label":"Remove CMake Cache",
            "type":"shell",
            "command": "Remove-Item -Recurse -Force ${workspaceFolder}/build",
        },
		{
			"label": "Flash with OpenOCD",
			"type": "shell",
			"command": "openocd",
			"args": [
				"-f",
                "${workspaceFolder}/openocd.cfg",
                "-c",
                "program ./build/Debug/${workspaceFolderBasename}.elf verify reset exit"
			],
            "dependsOn": "build",
			"problemMatcher": [],
		},
        {
            "label": "log",
            "type": "process",
            "command": "E:\\MDEBUG\\JLINK\\JLinkRTTClient.exe",
            "args": [],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "shell": {
                    "executable": "powershell.exe",
                    "args": ["-Command"]
                }
            }
        },
        {
            "type": "shell",
            "label": "jlink_flash",
            "command": "E:\\MDEBUG\\JLINK\\JLink.exe",
            "args": [
                "-device", "STM32F407VE",
        "-if", "SWD",
        "-speed", "4000",
        "-autoconnect", "1",
        "-NoGui", "1",
                "-CommanderScript", "${workspaceFolder}\\flash.jlink"   // ← 關鍵！指定腳本檔
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "build",           // 先 build 再 flash（看你需求）
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}